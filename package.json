{
  "name": "perfect-css",
  "version": "0.3.5",
  "author": {
    "name": "Linder Wang",
    "email": "linder0209@126.com",
    "url": "https://github.com/hopefuture"
  },
  "description": "Perfect is a popular CSS framework based on the modern browser. It can bring you perfect experience and the newest css technology. It is a CSS framework in the future.",
  "keywords": [
    "scss",
    "css",
    "theme",
    "perfect"
  ],
  "main": "components/perfect.scss",
  "files": [
    "components",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "clean:docs": "rimraf ./docs/assets/css ./docs/assets/js ./_gh_pages/**",
    "clean:tmp": "rimraf ./_tmp",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel components --out-dir dist/lib",
    "build:es": "cross-env BABEL_ENV=es babel components --out-dir dist/es",
    "build:umd": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.config.babel.js",
    "build:umd:min": "cross-env NODE_ENV=production NODE_UGLIFY=true webpack -p --progress --colors --config scripts/webpack.config.babel.js",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:*",
    "dev": "cross-env NODE_ENV=development webpack --progress --colors --config scripts/webpack.config.babel.js",
    "dev:min": "cross-env NODE_ENV=development webpack --progress --colors --config scripts/webpack.config.babel.js",
    "jekyll:serve": "bundle exec jekyll serve --incremental --skip-initial-build",
    "prejekyll:docs": "npm run clean:docs && npm run dev:min",
    "prestart": "npm run clean:docs",
    "start": "npm-run-all --parallel \"dev -- --watch\" jekyll:serve",
    "jekyll:docs": "JEKYLL_ENV=production bundle exec jekyll build",
    "test:scss": "mocha --colors test/scss/scss-test.js",
    "test:js": "",
    "test": "npm-run-all --parallel test:*",
    "lint:css": "stylelint \"components/**/*.scss\" && stylelint \"docs/assets/scss/**/*.scss\"",
    "lint:js": "eslint components docs/assets/es6 scripts",
    "lint": "npm-run-all --parallel lint:*",
    "fix:css": "stylelint --fix \"components/**/*.scss\" && stylelint --fix \"docs/assets/scss/**/*.scss\"",
    "fix:js": "eslint --fix components docs/assets/es6 scripts",
    "fix": "npm-run-all --parallel fix:*",
    "validate": "node ./scripts/validate-code.js",
    "prepublishOnly": "npm run build",
    "github-pages": "npm run jekyll:docs && git add _gh_pages && git commit -m \"Update docs\" && git subtree push --prefix=_gh_pages origin gh-pages --squash && git push",
    "rouge-theme": "rougify style github > docs/assets/scss/docs/_highlight.scss",
    "css-prefix": "node scripts/css-prefix.js",
    "pregenerate-zip": "npm run dist",
    "generate-zip": "npm run clean:tmp && mkdirp _tmp/dist/css && mkdirp _tmp/dist/js && babel-node scripts/generate-dist-zip.js"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^8.6.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chalk": "^2.4.1",
    "clipboard": "^2.0.1",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-ava": "^4.5.1",
    "file-loader": "^1.1.11",
    "file-package": "^1.0.6",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.13.4",
    "resolve-url-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.2",
    "sass-true": "^4.0.0",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.0.1"
  },
  "engines": {
    "node": ">=6.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joy-web/perfect-css.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joy-web/perfect-css/issues"
  },
  "homepage": "https://github.com/joy-web/perfect-css#readme"
}
