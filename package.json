{
  "name": "perfect-css",
  "version": "0.3.0",
  "author": {
    "name": "Linder Wang",
    "email": "linder0209@126.com",
    "url": "https://github.com/hopefuture"
  },
  "description": "Perfect is a popular CSS framework based on the modern browser. It can bring you perfect experience and the newest css technology. It is a CSS framework in the future.",
  "keywords": [
    "scss",
    "css",
    "theme",
    "perfect"
  ],
  "main": "components/perfect.scss",
  "files": [
    "components",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "clean:docs": "rimraf ./docs/assets/css ./docs/assets/js ./_gh_pages/**",
    "dev": "cross-env NODE_ENV=development webpack --progress --colors --config webpack.config.babel.js --watch",
    "dev:min": "cross-env NODE_ENV=development webpack -p --progress --colors --config webpack.config.babel.js",
    "build": "cross-env NODE_ENV=production webpack --progress --colors --config webpack.config.babel.js",
    "build:min": "cross-env NODE_ENV=production NODE_UGLIFY=true webpack -p --progress --colors --config webpack.config.babel.js",
    "dist": "npm run clean && npm run build && npm run build:min",
    "jekyll:serve": "bundle exec jekyll serve",
    "prejekyll:docs": "npm run clean:docs && npm run dev:min",
    "jekyll:docs": "JEKYLL_ENV=production bundle exec jekyll build",
    "prestart": "npm run clean:docs && npm run cpy-js",
    "start": "npm-run-all --parallel dev jekyll:serve",
    "rouge-theme": "rougify style github > docs/assets/scss/docs/_highlight.scss",
    "scss-test": "mocha --colors test/scss/scss-test.js",
    "css-prefix": "node css-prefix.js",
    "cpy-js": "cpy ./node_modules/clipboard/dist/clipboard.min.js ./docs/assets/js/vendor",
    "github-pages": "npm run jekyll:docs && git add _gh_pages && git commit -m \"Update docs\" && git subtree push --prefix=_gh_pages origin gh-pages --squash && git push",
    "prepublish": "npm run dist"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.0",
    "clipboard": "^1.7.1",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^4.12.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-ava": "^4.3.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "glob": "^7.1.2",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.9",
    "resolve-url-loader": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "sass-true": "^3.0.2",
    "sasslint-loader": "0.0.1",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.9.1"
  },
  "engines": {
    "node": ">=6.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joy-web/perfect-css.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joy-web/perfect-css/issues"
  },
  "homepage": "https://github.com/joy-web/perfect-css#readme"
}
